<Page x:Class="ConfApp.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ConfApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Label Content="Логин:"></Label>
            <TextBox x:Name="LoginTextBox"></TextBox>
            <Label Content="Пароль:"></Label>
            <PasswordBox x:Name="PasswordTextBox"></PasswordBox>
            <Button Content="Войти" x:Name="LoginButton" 
                    Click="LoginButton_Click"
                    Margin="10"></Button>
            <Button Content="Регистрация" x:Name="RegistrButton"
                    Click="RegistrButton_Click"></Button>
        </StackPanel>
        <Button Content="Назад" x:Name="BackButton"
                Click="BackButton_Click"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="10"></Button>
    </Grid>
</Page>
